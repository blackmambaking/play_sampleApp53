<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".squadMode.JoinRoom">

    <TextView
        android:id="@+id/textViewxyz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/new_rocker"
        android:text="Room"
        android:textColor="#FBFAFA"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/joinRoomRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/chapterback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#CA8E8E"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <EditText
            android:id="@+id/playerNamexyz"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"

            android:fontFamily="@font/new_rocker"
            android:gravity="center"
            android:hint="Your Name"
            android:inputType="textPersonName"
            android:textColor="#FAF9F9"
            android:textColorHighlight="@color/white"
            android:textColorHint="#F6F3F3"
            android:textColorLink="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewxyz22"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red"
            android:fontFamily="@font/new_rocker"
            android:gravity="center"
            android:text="Save Name"
            android:textColor="#F8F4F4"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#CA8E8E"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewxyz">

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="150dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/new_rocker"
            android:gravity="center"
            android:hint="Enter Room Key"
            android:inputType="number"
            android:textColor="#FBFBFB"
            android:textColorHighlight="@color/white"
            android:textColorHint="#FAF7F7"
            android:textColorLink="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewxyz13"
            android:layout_width="150dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:background="@color/red"
            android:fontFamily="@font/new_rocker"
            android:gravity="center"
            android:text="Submit"
            android:textColor="#F8F5F5"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Squad members appear here. \n Only room creator can start the game."
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/joinRoomRecycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

</androidx.constraintlayout.widget.ConstraintLayout>